---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found">
  <div class="flex flex-col items-center justify-center min-h-[50vh] text-center">
    <h1 class="text-6xl font-bold text-sozna-accent mb-4">404</h1>
    <p class="text-xl text-zinc-400 mb-8 font-serif">The page you are looking for does not exist.</p>
    <a href="/" class="px-6 py-2 bg-zinc-800 text-zinc-200 hover:bg-sozna-accent hover:text-zinc-900 rounded transition-colors font-sans">
      Return to Research
    </a>
  </div>
</Layout>
